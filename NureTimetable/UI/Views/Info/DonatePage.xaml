<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mct="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:products="clr-namespace:NureTimetable.Core.Models.Consts;assembly=NureTimetable.Core"
             xmlns:vm="clr-namespace:NureTimetable.UI.ViewModels"
             xmlns:ui="clr-namespace:NureTimetable.UI.Helpers"
             x:Class="NureTimetable.UI.Views.DonatePage"
             x:DataType="vm:DonateViewModel"
             Title="{ui:Translate Donate}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="{DynamicResource GreenButtonColor}"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="Margin" Value="0,10,0,0"/>
                <Setter Property="Command" Value="{Binding BuyProductCommand}"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackLayout BackgroundColor="{DynamicResource BigImageBackgroundColor}" Padding="0,40">
            <Image Source="coin.png" HeightRequest="85" />
        </StackLayout>
        <ScrollView Grid.Row="1">
            <StackLayout Orientation="Vertical" Padding="16,40" Spacing="10">
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <FormattedString.Spans>
                                <Span Text="{ui:Translate ThisApp}" />
                                <Span Text="{ui:Translate IsFree}" FontAttributes="Bold" />
                                <Span Text="{ui:Translate AndWillAlwaysBe}" />
                            </FormattedString.Spans>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Text="{ui:Translate YourContribution}" />
                <Button Text="{ui:Translate Thank}" CommandParameter="{Static products:InAppProducts.DonateLow}"/>
                <Button Text="{ui:Translate Thank2}" CommandParameter="{Static products:InAppProducts.DonateMedium}"/>
                <Button Text="{ui:Translate Thank3}" CommandParameter="{Static products:InAppProducts.DonateHigh}"/>
            </StackLayout>
        </ScrollView>
    </Grid>
</ContentPage>